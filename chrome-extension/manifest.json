{
  "manifest_version": 2,
  "name": "Allergen Warnings",
  "description": "Know if the product has allergens!",
  "version": "1.0",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://primenow.amazon.com/*"
      ],
      "js": [
        "jquery-3.3.1.min.js",
        "bootstrap.min.js",
        "content.js",
        "popup.js"
      ],
      "css": ["monolithic.css", "bootstrap.min.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "exclamation-mark.png",
    "checked-mark.png"
  ],
  "icons": {
    "512": "icon/icon512.png"
  }
}