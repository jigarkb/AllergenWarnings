{
  "manifest_version": 2,
  "name": "Allergy Warnings",
  "description": "Know if the product has allergens!",
  "version": "1.0",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "jquery-3.3.1.min.js",
        "content.js",
        "popup.js"
      ],
      "css": ["monolithic.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "exclamation-mark.png"
  ]
}